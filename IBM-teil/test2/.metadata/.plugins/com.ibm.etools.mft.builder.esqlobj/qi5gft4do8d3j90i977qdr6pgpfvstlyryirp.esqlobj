CREATE COMPUTE MODULE MSGResturant_Failure
	CREATE FUNCTION Main() RETURNS BOOLEAN
	BEGIN
		CALL CopyMessageHeaders();
		-- CALL CopyEntireMessage();
		
		DECLARE beschreibung CHAR;
		SET OutputRoot.HTTPInputHeader.X-Original-HTTP-Command VALUE 'POST http://127.0.0.1:7800/service/restaurant HTTP/1.1';	
		
		
		SET beschreibung = 'Error: Database is not available. Please try again later!';
		SET OutputRoot.JSON.Data.beschreibung = beschreibung;
		
		RETURN TRUE;
	END;

	CREATE PROCEDURE CopyMessageHeaders() BEGIN
		DECLARE I INTEGER 1;
		DECLARE J INTEGER;
		SET J = CARDINALITY(InputRoot.*[]);
		WHILE I < J DO
			SET OutputRoot.*[I] = InputRoot.*[I];
			SET I = I + 1;
		END WHILE;
	END;

	CREATE PROCEDURE CopyEntireMessage() BEGIN
		SET OutputRoot = InputRoot;
	END;
END MODULE;